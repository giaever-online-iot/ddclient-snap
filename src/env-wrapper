#!/usr/bin/env bash

REGEX="^.*[^doc]\/perl+(\-base|[0-9]+?\/[0-9\.]+)$"

export PERL5LIB="${PERL5LIB}"
for P in $(find $SNAP -type d -regextype posix-extended -regex "${REGEX}"); do
      if [[ ! "${PERL5LIB}" =~ "${P}" ]]; then
	      PERL5LIB="${PERL5LIB}$([ -n "${PERL5LIB}" ] && echo ":")${P}"
	      logger "PERL5LIB+=${P}"
      fi
done
logger "PERL5LIB: ${PERL5LIB}"

exec "${@}"
